<%-include('./partials/header.ejs') %> 
<%-include('./partials/navbar.ejs')%>
<div class="container">
    <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.pergunta %></p> 
    <hr>
    <form method ="POST" action='/sendresposta'>
        <h3>Responda</h3>
        <label>Resposta:</label>
        <textarea placeholder="Digite sua resposta" class="form-control" name="conteudo"></textarea>
        <br>
        <input type="hidden" name="perguntaID" value="<%= pergunta.id %>"> <button class="btn btn-dark">Responder</button>
    </form>
    <br>
    <h3>Respostas:</h3>
    <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.conteudo %><p> 
                </div>
            </div>
        <% }) %>
</div>
<%-include('./partials/footer.ejs') %> 